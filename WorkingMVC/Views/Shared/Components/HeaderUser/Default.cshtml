@model HeaderUserViewModel

@if (User.Identity.IsAuthenticated)
{
    <ul class="navbar-nav">
        <li class="nav-item">
            <img class="rounded-circle" alt="user photo" src="../images/@Model.Image" width="50px" height="50px"/>
        </li>
        <li class="nav-item">
            <a class="nav-link">
                @Model.FirstName @Model.SecondName
            </a>
        </li>
        <li class="nav-item">
            <form asp-action="Logout"
                  asp-controller="Account">
                <button class="nav-link">Вийти</button>
            </form>
        </li>
    </ul>
}
else
{
    <ul class="navbar-nav">
        <li class="nav-item">
            <a class="nav-link"
               asp-action="Register"
               asp-controller="Account">
                Реєстрація
            </a>
        </li>
        <li class="nav-item">
            <a class="nav-link"
               asp-action="Login"
               asp-controller="Account">
                Вхід
            </a>
        </li>
    </ul>
}
